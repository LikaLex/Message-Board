<div class="pagination-wrapper">
  <%= will_paginate @messages, renderer: BootstrapPagination::Rails, previous_label:'Previous',
                    next_label: 'Next', inner_window:1, outer_window:0 %>
</div>

<% @messages.each do |message| %>
    <div class="col-md-4">
      <div class="message">
        <h2 class="message-title"><%= message.title %></h2>

        <% if message.image.blank? %>
        <% else %>
        <%= image_tag message.image.url(:thumb), class: "message_im" %>
        <% end %>
        <%= link_to 'View Message', message, class: "btn-custom" %>
      </div>
    </div>
<% end %>
